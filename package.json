{
  "name": "vite-plugin-stylelint",
  "version": "3.0.1",
  "description": "Stylelint plugin for vite.",
  "keywords": [
    "stylelint",
    "vite-plugin"
  ],
  "homepage": "https://github.com/ModyQyW/vite-plugin-stylelint",
  "repository": "git+https://github.com:ModyQyW/vite-plugin-stylelint.git",
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup-node src/index.ts --format esm,cjs --dts --minify --shims --target node12",
    "commit": "git-cz",
    "dev": "pnpm run build --watch src",
    "examples:react:build": "pnpm --filter react run build",
    "examples:react:dev": "pnpm --filter react run dev",
    "examples:solid:build": "pnpm --filter solid run build",
    "examples:solid:dev": "pnpm --filter solid run dev",
    "examples:svelte:build": "pnpm --filter svelte run build",
    "examples:svelte:dev": "pnpm --filter svelte run dev",
    "examples:vue:build": "pnpm --filter vue run build",
    "examples:vue:dev": "pnpm --filter vue run dev",
    "lint": "eslint src --fix && tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run build",
    "release": "release-it"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt": "^17.0.3",
    "@release-it/conventional-changelog": "^5.0.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/eslint": "^8.4.5",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "release-it": "^15.1.1",
    "stylelint": "^14.9.1",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4",
    "vite": "^3.0.0"
  },
  "peerDependencies": {
    "@types/stylelint": "^13.0.0",
    "stylelint": "^13.0.0 || ^14.0.0",
    "vite": "^2.0.0 || ^3.0.0-0"
  },
  "peerDependenciesMeta": {
    "@types/stylelint": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}",
      "tagName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "header": "# Changelog",
        "preset": "conventionalcommits"
      }
    },
    "hooks": {
      "before:init": "pnpm install && pnpm run lint",
      "after:bump": "pnpm run build"
    }
  }
}
