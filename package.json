{
  "name": "vite-plugin-stylelint",
  "version": "4.3.0",
  "description": "Stylelint plugin for Vite.",
  "keywords": [
    "stylelint",
    "vite-plugin"
  ],
  "homepage": "https://github.com/ModyQyW/vite-plugin-stylelint",
  "repository": "git+https://github.com:ModyQyW/vite-plugin-stylelint.git",
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "check:deps": "ncu --dep dev,optional,prod,packageManager",
    "check:types": "tsc --noEmit",
    "commit": "git-cz",
    "dev": "unbuild --stub",
    "examples:react:build": "pnpm --filter react run build",
    "examples:react:dev": "pnpm --filter react run dev",
    "examples:vue:build": "pnpm --filter vue run build",
    "examples:vue:dev": "pnpm --filter vue run dev",
    "lint": "run-p lint:eslint lint:markdownlint lint:publint check:types",
    "lint:eslint": "eslint ./src --fix --cache --ignore-path=.gitignore",
    "lint:markdownlint": "markdownlint . --fix --ignore=CHANGELOG.md --ignore-path=.gitignore",
    "lint:publint": "publint",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm install && pnpm run build && pnpm run lint && bumpp"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.0.2",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/prompt": "^17.5.0",
    "@modyqyw/fabric": "^7.4.1",
    "@modyqyw/utils": "^5.0.0",
    "@tsconfig/node18": "^1.0.1",
    "@types/eslint": "^8.21.3",
    "@types/node": "^18.15.5",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "bumpp": "^9.0.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "markdownlint-cli": "^0.35.0",
    "npm-check-updates": "^16.7.13",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.6",
    "publint": "^0.1.11",
    "rollup": "^3.20.0",
    "sort-package-json": "^2.4.1",
    "stylelint": "^15.3.0",
    "type-fest": "^3.6.1",
    "typescript": "^5.0.2",
    "unbuild": "^1.1.2",
    "vite": "^4.2.1"
  },
  "peerDependencies": {
    "@types/stylelint": "^13.0.0",
    "postcss": "^7.0.0 || ^8.0.0",
    "rollup": "^2.0.0 || ^3.0.0",
    "stylelint": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "@types/stylelint": {
      "optional": true
    },
    "postcss": {
      "optional": true
    },
    "rollup": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.30.0",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
