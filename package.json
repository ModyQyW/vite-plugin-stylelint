{
  "name": "vite-plugin-stylelint",
  "version": "3.3.3",
  "description": "Stylelint plugin for Vite.",
  "keywords": [
    "stylelint",
    "vite-plugin"
  ],
  "homepage": "https://github.com/ModyQyW/vite-plugin-stylelint",
  "repository": "git+https://github.com:ModyQyW/vite-plugin-stylelint.git",
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "commit": "git-cz",
    "dev": "pnpm run build --watch src",
    "examples:react:build": "pnpm --filter react run build",
    "examples:react:dev": "pnpm --filter react run dev",
    "examples:solid:build": "pnpm --filter solid run build",
    "examples:solid:dev": "pnpm --filter solid run dev",
    "examples:svelte:build": "pnpm --filter svelte run build",
    "examples:svelte:dev": "pnpm --filter svelte run dev",
    "examples:vue:build": "pnpm --filter vue run build",
    "examples:vue:dev": "pnpm --filter vue run dev",
    "lint": "run-p lint:eslint check:types",
    "lint:eslint": "eslint src --fix",
    "check:types": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run build",
    "release": "release-it"
  },
  "dependencies": {
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/prompt": "^17.3.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/pluginutils": "^4.2.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.0",
    "release-it": "^15.5.1",
    "rollup": "^2.79.1",
    "stylelint": "^14.16.0",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  },
  "peerDependencies": {
    "@types/stylelint": "^13.0.0",
    "stylelint": "^13.0.0 || ^14.0.0",
    "vite": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@types/stylelint": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.17.1",
  "engines": {
    "node": ">=12.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
