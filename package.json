{
  "name": "vite-plugin-stylelint",
  "version": "4.1.4",
  "description": "Stylelint plugin for Vite.",
  "keywords": [
    "stylelint",
    "vite-plugin"
  ],
  "homepage": "https://github.com/ModyQyW/vite-plugin-stylelint",
  "repository": "git+https://github.com:ModyQyW/vite-plugin-stylelint.git",
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui-dev@foxmail.com",
    "url": "https://modyqyw.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "commit": "git-cz",
    "dev": "pnpm run build --watch",
    "examples:react:build": "pnpm --filter react run build",
    "examples:react:dev": "pnpm --filter react run dev",
    "examples:solid:build": "pnpm --filter solid run build",
    "examples:solid:dev": "pnpm --filter solid run dev",
    "examples:vue:build": "pnpm --filter vue run build",
    "examples:vue:dev": "pnpm --filter vue run dev",
    "lint": "run-p lint:eslint check:types",
    "lint:eslint": "eslint src --fix",
    "check:types": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run build",
    "release": "release-it"
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.0.2",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@commitlint/prompt": "^17.3.0",
    "@hyrious/esbuild-plugin-commonjs": "^0.2.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.2.1",
    "@tsconfig/node18": "^1.0.1",
    "@types/eslint": "^8.4.10",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "esbuild": "^0.16.12",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^2.8.1",
    "release-it": "^15.6.0",
    "rollup": "^3.9.0",
    "rollup-plugin-dts": "^5.1.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "stylelint": "^14.16.1",
    "type-fest": "^3.5.0",
    "typescript": "^4.9.4",
    "vite": "^4.0.3"
  },
  "peerDependencies": {
    "@types/stylelint": "^13.0.0",
    "stylelint": "^13.0.0 || ^14.0.0",
    "vite": "^2.0.0 || ^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "@types/stylelint": {
      "optional": true
    }
  },
  "packageManager": "pnpm@7.21.0",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
